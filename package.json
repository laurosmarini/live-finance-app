{
  "name": "finance-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "test": "cd client && npm test && cd ../server && npm test",
    "install-deps": "cd client && npm install && cd ../server && npm install",
    "start": "cd server && npm start",
    "heroku-postbuild": "cd server && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "axios": "^1.5.0",
    "crypto-js": "^4.1.1",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "A comprehensive live finance application with real-time crypto and stock tracking, budgeting, and transaction management.",
  "main": "index.js",
  "keywords": ["finance", "crypto", "stocks", "budgeting", "transactions", "react", "node"],
  "author": "laurosmarini",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/laurosmarini/live-finance-app.git"
  },
  "bugs": {
    "url": "https://github.com/laurosmarini/live-finance-app/issues"
  },
  "homepage": "https://github.com/laurosmarini/live-finance-app#readme"
}
